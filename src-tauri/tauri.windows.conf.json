{
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "createUpdaterArtifacts": false,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/pre-install/**/*",
      "resources/lib/",
      "binaries/**/*"
    ],
    "externalBin": [
      "binaries/cortex-server",
      "resources/bin/bun",
      "resources/bin/uv"
    ],
    "windows": {
      "signCommand": "powershell -ExecutionPolicy Bypass -File ./sign.ps1 %1"
    }
  }
}
